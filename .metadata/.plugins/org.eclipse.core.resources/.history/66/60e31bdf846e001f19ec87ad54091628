package com.example.snowman.models;

import java.time.LocalDate;
import java.time.LocalDateTime;

import jakarta.persistence.Entity;
import jakarta.persistence.Id;
import lombok.Getter;
import lombok.Setter;

@Getter
@Setter
@Entity
public class Invoice {
	
    @Id
    private String invoiceNo;
    private LocalDate date;
    private String eWayBillNo;
    private String modeTermsOfPayment;
    private String buyersOrderNo;
    private LocalDate buyersOrderDate;
    private String despatchDocumentNo;
    private LocalDateTime deliveryNoteDate;
    private String despatchedThrough;
    private String destination;
    private String billOfLadingNo;
    private String motorVehicleNo;
    private String termsOfDelivery;
    private Double totalValue;
    private Double totalTaxableValue;
    private Double totalIGST;
    private Double totalCGST;
    private Double totalSGST;
    private Double totalTax;
    private Double roundOff;
    private Double totalInvoiceValue;
    private String taxAmountInWords;
    private String amountChargeableInWords;
    private String declaration;
    private String irn;
    private String ackNo;
    private LocalDate ackDate;
}
