package com.example.snowman.services;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.example.snowman.models.InvoiceDB;
import com.example.snowman.models.ItemDB;
import com.example.snowman.repositories.InvoiceDBRepository;

import jakarta.transaction.Transactional;

@Service
public class InvoiceDBService {
    @Autowired
    private InvoiceDBRepository invoiceDBRepository;

//    public InvoiceDB save(InvoiceDB invoiceDB) {
//        return invoiceDBRepository.save(invoiceDB);
//    }
    
    @Transactional
    public InvoiceDB save(InvoiceDB invoiceDB) {
        for (ItemDB item : invoiceDB.getItems()) {
            item.setInvoiceDB(invoiceDB);
        }
        return invoiceDBRepository.save(invoiceDB);
    }
}
